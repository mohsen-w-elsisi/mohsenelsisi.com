---
import GithubIcon from "../assets/icons/social/GithubIcon.astro";
import LinkedinIcon from "../assets/icons/social/LinkedinIcon.astro";
import EmailIcon from "../assets/icons/social/EmailIcon.astro";
import RssIcon from "../assets/icons/social/RssIcon.astro";
---

<div class="social-icons">
  <a href="https://github.com/mohsen-w-elsisi/">
    <GithubIcon />
  </a>
  <a href="https://www.linkedin.com/in/mohsen-elsisi-b04ba3251/">
    <LinkedinIcon />
  </a>
  <a href="mailto:mohsenelsisi36@gmail.com">
    <EmailIcon />
  </a>
  <RssIcon />
</div>

<style>
  .social-icons {
    display: flex;
    gap: 0.75rem;
    align-items: baseline;
  }

  .social-icons :global(svg) {
    height: 2.5rem;
    width: auto;
  }

  @media (min-width: 768px) {
    .social-icons {
      margin-top: auto;
    }
  }
</style>
