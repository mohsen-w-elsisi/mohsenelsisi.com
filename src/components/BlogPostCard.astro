---
interface Props {
  title: string;
  text: string;
}

const { title, text } = Astro.props;
---

<article>
  <h3>{title}</h3>
  <p>{text}</p>
</article>

<style>
  article {
    height: min(fit-content, 10rem);

    display: flex;
    flex-direction: column;
    gap: var(--card-content-gap);
  }

  h3 {
    font: var(--card-title-font);
    margin: 0;
  }

  p {
    font: var(--card-body-font);
  }
</style>
