---
import readableDate from "./readableDate";
import { render, type CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"posts">;
}

const { post } = Astro.props;
const { remarkPluginFrontmatter } = await render(post);
const preview = remarkPluginFrontmatter.preview as string;
---

<a href={`/blog/${post.id}`} class="card">
  <h3>{post.data.title}</h3>
  <p class="date">{readableDate(post.data.date)}</p>
  <p>{preview}</p>
</a>

<style>
  a {
    height: min(fit-content, 10rem);

    display: flex;
    flex-direction: column;
    gap: var(--blog-card-content-gap);
  }

  h3 {
    font: var(--card-title-font);
    margin: 0;
  }

  .date {
    font: var(--card-body-font);
    font-weight: 600;
    margin-bottom: 0.2rem;
  }

  p {
    font: var(--card-body-font);
  }
</style>
