---
import readableDate from "./readableDate";

interface Props {
  id: string;
  title: string;
  date: Date;
  preview: string;
}

const { id, title, date, preview } = Astro.props;
---

<a href={`/blog/${id}`} class="card">
  <h3>{title}</h3>
  <p class="date">{readableDate(date)}</p>
  <p>{preview}</p>
</a>

<style>
  a {
    height: min(fit-content, 10rem);

    display: flex;
    flex-direction: column;
    gap: var(--blog-card-content-gap);
  }

  h3 {
    font: var(--card-title-font);
    margin: 0;
  }

  .date {
    font: var(--card-body-font);
    font-weight: 600;
    margin-bottom: 0.2rem;
  }

  p {
    font: var(--card-body-font);
  }
</style>
