---
import Header from "../Header.astro";
import SocialIcons from "../SocialIcons.astro";
import heroMe from "../../assets/hero-me.webp";
import { Image } from "astro:assets";
---

<section id="hero">
  <Header />
  <div id="hero-content">
    <div id="hero-photo">
      <Image src={heroMe} alt="Mohsen Elsisi" />
      <span class="hero-gradiant"></span>
    </div>
    <h1>Hello World! <br /> I'm Mohsen.</h1>
    <div id="hero-details">
      <p>
        Hi, I’m Mohsen Elsisi. I’m a self-taught web and flutter developer
        turned data science and AI college student at Zewail city.
      </p>
      <a href="/about">more about me</a>
      <SocialIcons />
    </div>
  </div>
</section>

<style>
  #hero {
    display: flex;
    flex-direction: column;
  }

  #hero-content {
    flex: 1;

    display: grid;
    grid-template-areas:
      "title"
      "photo"
      "details";
    padding: 0 var(--landing-page-section-x-pad);
    padding-bottom: 1rem;
  }

  #hero-photo {
    width: 100%;
    height: 100%;

    grid-area: photo;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  #hero-details {
    grid-area: details;

    display: flex;
    flex-direction: column;
    align-items: left;
    gap: 1rem;

    font-size: var(--display-body-font-size);
  }

  @media (min-width: 768px) {
    #hero-content {
      grid-template-areas:
        "photo title"
        "photo details";
      grid-template-columns: 1fr 1fr;
      grid-template-rows: min-content 1fr;
      align-items: top;
      column-gap: 3.5rem;
    }

    #hero-photo {
      & :global(img) {
        width: auto;
        height: 80vh;
        border-radius: var(--rounded-corner-radius);
      }
    }
  }

  @media (max-width: 767px) {
    #hero-photo {
      & :global(img) {
        width: 100%;
        height: auto;
        border-radius: var(--rounded-corner-radius);
      }
    }

    #hero-details {
      margin: 1rem 0;

      & :global(.social-icons) {
        margin-top: 1rem;
      }
    }
  }
</style>
